{
    "name": "ebizmarts/microsoft-cognitive-services-api",
    "type": "library",
    "description": "API wrapper for Microsoft Cognitive services.",
    "keywords": [
        "ebizmarts",
        "cognitive services",
        "micosoft"
    ],
    "homepage": "https://github.com/ebizmarts/microsoft-cognitive-services-api",
    "license": "MIT",
    "authors": [
        {
            "name": "Ebizmarts",
            "email": "info@ebizmarts.com",
            "homepage": "https://ebizmarts.com/",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~5.6|~7.0",
        "guzzlehttp/guzzle": "~6.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.0||~5.0",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Ebizmarts\\MsCognitiveService\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ebizmarts\\MsCognitiveService\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
